<Window x:Class="MMEditor.dlgSaveLevel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Level" Height="111" Width="364">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Please enter a name for this level." HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox Name="tbxName" Text="level0" Width="200" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </StackPanel>
        <Button Content="Save" Height="23" HorizontalAlignment="Right" Name="btnOk" VerticalAlignment="Bottom" Width="100" Click="btnOk_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Name="btnCancel" VerticalAlignment="Bottom" Width="100" Click="btnCancel_Click" />
    </Grid>
</Window>
